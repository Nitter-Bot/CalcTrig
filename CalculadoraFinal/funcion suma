#include <stdio.h>

int main() {
    // Declaración de variables
    float x, y, suma;

    // Solicitar al usuario ingresar dos números
    printf("Ingresa el valor de x: ");
    scanf("%f", &x);

    printf("Ingresa el valor de y: ");
    scanf("%f", &y);

    // Calcular la suma
    suma = x + y;

    // Mostrar el resultado
    printf("La suma de %f y %f es %f\n", x, y, suma);

    return 0;
}
